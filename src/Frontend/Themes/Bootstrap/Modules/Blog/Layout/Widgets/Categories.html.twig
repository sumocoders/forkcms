{#
variables that are available:
- {{ widgetBlogCategories }}:
#}

{% if widgetBlogCategories %}
  <section id="blogCategoriesWidget" class="blog blog-widget card mb-3">
    <header class="card-header">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h4 class="mb-0">{{ 'lbl.Categories'|trans|ucfirst }}</h4>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="list-group list-group-flush">
            {% for category in widgetBlogCategories %}
              <a class="list-group-item list-group-item-action" href="{{ category.url }}">
                {{ category.label }}
                &nbsp;<span class="badge badge-pill badge-default">{{ category.total }}</span> </a>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}
